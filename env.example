# POC-2 Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# Supabase Configuration
# =============================================================================
# Your Supabase project URL
SUPABASE_URL=http://kong:8000

# Service role key (for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your_service_role_key_here

# Anonymous key (optional, for client-side operations)
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your_anon_key_here

# =============================================================================
# MinIO Configuration
# =============================================================================
# MinIO server endpoint
MINIO_ENDPOINT=your-minio-endpoint:9000

# MinIO access credentials
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key

# MinIO bucket for trading data
MINIO_BUCKET=trading-data

# Use SSL for MinIO connection (true/false)
MINIO_USE_SSL=false

# =============================================================================
# Airflow Database Configuration
# =============================================================================
# PostgreSQL database for Airflow metadata
AIRFLOW_POSTGRES_USER=airflow
AIRFLOW_POSTGRES_PASSWORD=airflow_secure_password_123
AIRFLOW_POSTGRES_DB=airflow

# =============================================================================
# Development Notes
# =============================================================================
# For local development:
# - SUPABASE_URL should be http://kong:8000 (internal Coolify network)
# - For external access, use your actual Supabase URL
# - MINIO_ENDPOINT should be your MinIO server address
# - Change AIRFLOW_POSTGRES_PASSWORD to a secure password
